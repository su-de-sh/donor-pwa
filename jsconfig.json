{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@layouts/*": ["src/layouts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@config": ["src/config.js"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@contexts/*": ["src/contexts/*"],
      "@guards/*": ["src/guards/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
